root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{cc,h,asm}]
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 88 # black formatter

[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false

[*.{toml,yml,json}]
indent_style = space
indent_size = 2
